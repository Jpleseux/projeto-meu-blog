{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small><b>Slug: </b>{{slug}}</small>
        <br>
        <small><b>Data de criação: </b>{{date}}</small>
        <br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">
                Editar categoria
        </button></a>
        <form action="/admin/categorias/deletar" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-4">Deletar categoria</button>
        </form>
    </div>
</div>
{{else}}
    <h4 class="mt-5">Nenhuma categoria registrada</h4>
{{/each}} 
