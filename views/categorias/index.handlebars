           <div class="row">
                <div class="col">
                    <p class="card-text">Nome: </p>       
                </div>
                <div class="col">
                    <a href="/categorias/{{slug}}"><button class="btn btn-success">{{slug}}</button></a>
                </div>
           </div>
        </div>
    </div>
{{else}}

{{/each}}